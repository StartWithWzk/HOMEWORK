<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="30sp"
            android:text="我的主页"/>
        
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/vector_drawable_message"/>
        
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/vector_drawable_head"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="小红"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小书童"
                    android:layout_marginLeft="4dp"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/vector_drawable_girl"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1" />

            <Button
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:text="签到"
                android:textSize="15dp"
                android:background="#2dd1b1"
                android:textColor="#ffffff"
                />

            <TextView
                android:layout_width="10dp"
                android:layout_height="70dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布"
                android:gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="6"
                android:textSize="20dp"
                android:textColor="#10fa68"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="2dp"
            android:layout_height="55dp">

            <TextView
                android:layout_width="2dp"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
            android:background="#707070"/>

            <TextView
                android:layout_width="2dp"
                android:layout_height="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关注"
                android:gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="11"
                android:textSize="20dp"
                android:textColor="#10fa68"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="2dp"
            android:layout_height="55dp">

            <TextView
                android:layout_width="2dp"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#707070"/>

            <TextView
                android:layout_width="2dp"
                android:layout_height="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="粉丝"
                android:gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="11"
                android:textSize="20dp"
                android:textColor="#10fa68"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="2dp"
            android:layout_height="55dp">

            <TextView
                android:layout_width="2dp"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#707070"/>

            <TextView
                android:layout_width="2dp"
                android:layout_height="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/vector_drawable_edit"
                />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="编辑资料"
                android:textSize="13dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_order"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="我的订单"
                android:textSize="20sp"
                android:gravity="center_vertical"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/vector_drawable_enter"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="15dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_collect"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="我的收藏"
                android:textSize="20sp"
                android:gravity="center_vertical"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/vector_drawable_enter"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_coin"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我的书币"
                android:textSize="20sp" />

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/vector_drawable_enter"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f5f5f5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_config" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="设置"
                android:textSize="20sp" />

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/vector_drawable_enter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_about" />

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="关于我们"
                android:textSize="20sp" />

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/vector_drawable_enter" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="18dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_drawable_share"/>

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="分享漂书"
                android:textSize="20sp"
                android:gravity="center_vertical"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/vector_drawable_enter"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="书城"
                android:drawableTop="@drawable/vector_drawable_book1"
                android:textSize="18dp"
                android:gravity="center_horizontal|bottom"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="发现"
                android:drawableTop="@drawable/vector_drawable_glass"
                android:textSize="18dp"
                android:gravity="center_horizontal|bottom"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="发布"
                android:textSize="18dp"
                android:gravity="center_horizontal|bottom"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="购物车"
                android:drawableTop="@drawable/vector_drawable_shopping3"
                android:textSize="18dp"
                android:gravity="center_horizontal|bottom"/>

            <TextView
                android:id="@+id/homepage_my"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="我的"
                android:drawableTop="@drawable/vector_drawable_my1"
                android:textSize="18dp"
                android:gravity="center_horizontal|bottom"/>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/vector_drawable_add2"
            android:layout_marginBottom="20dp"/>


    </FrameLayout>


</LinearLayout>